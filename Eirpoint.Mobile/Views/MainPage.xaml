<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Eirpoint.Mobile.Views.MainPage"
             Title="{Binding Title}">

    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <StackLayout HorizontalOptions="StartAndExpand">
                <Button x:Name="btn_getProducts" Text="Perform Products" Command="{Binding PerformProductsCommand}" />
            </StackLayout>
            <StackLayout HorizontalOptions="FillAndExpand">
                <ProgressBar x:Name="pb_ProgressBar"  ProgressColor="Blue" Progress="{Binding PbProducts}"></ProgressBar>
                <Label x:Name="lbl_ProgressBar" Text="{Binding LbProducts}" FontAttributes ="Bold"></Label>
            </StackLayout>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>